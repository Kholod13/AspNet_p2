@model UseThi.Models.WalletViewModel

@{
    ViewData["Title"] = "Marketplace";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid d-flex flex-column">
        <div class="container text-center mt-3">
            <div class="d-flex flex-column mb-3">
                @foreach (var crypto in Model.Cryptocurrencies)
                {
                    <div class="border border-secondary p-2 justify-content-between d-flex flex-row mb-3">
                        <div class=" d-flex flex-row">
                            <div class="p-2">@crypto.Name (@crypto.Symbol)</div>
                            <div class="p-2">$@crypto.Price</div>
                        </div>
                        <div>
                            <button class="p-2">BUY</button>
                            <button class="p-2">SELL</button>
                            <a href="https://ru.tradingview.com/" target="_blank" class="text-secondary-emphasis link-offset-2 link-underline link-underline-opacity-0">OPEN</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</nav>
