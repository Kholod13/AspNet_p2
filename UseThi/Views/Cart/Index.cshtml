@using Data.Data.Entities;
@model List<ProductCartModel>

<div class="card text-center">
    <div class="card-header">
        My cart
    </div>
    <div class="card-body">
        <h5 class="card-title">Product List</h5>

        <ol class="list-group list-group-numbered">
            @foreach(var i in Model)
            {
                <li class="list-group-item d-flex justify-content-between align-items-start">
                    <div class="fw-bold">
                        @i.Name
                        @if(i.Discount > 0){
                            <span class="badge bg-primary">SALE</span>
                        }
                    </div>
                    @i.Category
                    <span class="badge bg-primary rounded-pill">@i.Price$</span>
                </li>
            }
        </ol>

        <a href="#" class="btn btn-success">Confirm Order</a>
        <a asp-controller="Home" class="btn btn-outline-primary mt-3">Continue Shopping</a>
    </div>
    <div class="card-footer text-muted">
        Total Price: <span class="badge bg-primary">@Model.Sum(x => x.Price)$</span>
    </div>
</div>